<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ucr.ac.cr.proyectoingenieria.CompanyActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/tvCName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textSize="20dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/etCName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tvCType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo: "
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/spCType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

        </Spinner>
        <TextView
            android:id="@+id/tvCAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direccion: "
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/etCAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollHorizontally="false"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tvCPhone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Telefono: "
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/etCPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tvCEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Correo Electrónico: "/>
        <EditText
            android:id="@+id/etCEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnSaveCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar Compañía"
                android:background="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="30dp"/>
            <Button
                android:id="@+id/btnDeleteCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar Compañía"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
